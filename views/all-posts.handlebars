<div class="container mt-5">
    {{#each posts as |post| }}
    <div class="card m-3">
        <div class="card-header">
            <h3 class="card-title">{{post.title}}</h3>
            <p class="card-subtitle text-muted">{{post.user.username}}</p>
        </div>
        <div class="card-body">
            <p class="card-text">
                {{post.text}}
            </p>
        </div>
    </div>
    {{/each}}
</div>