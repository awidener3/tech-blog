<div class="container mt-5">

    {{!-- post cards --}}
    {{#each posts as |post| }}
    <div class="card custom-card m-3">
        <div class="card-header">
            <a href="/post/{{post.id}}">
                <h3 class="card-title">{{post.title}}</h3>
            </a>
            <p class="card-subtitle text-muted">{{post.user.username}} - {{format_date post.user.createdAt}}</p>
        </div>

        <div class="card-body">
            <p class="card-text">
                {{post.text}}
            </p>
        </div>
    </div>
    {{/each}}

</div>