
<div class="container p-3 mt-5">
    <div class="col-8 mx-auto">
        <form id="signup-form" class="mb-3">
            <h2>Signup</h2>
            <div class="mb-3">
                <label for="username-input-signup" class="form-label">Username</label>
                <input type="text" class="form-control" id="username-input-signup" aria-describedby="username signup" required>
            </div>
            <div class="mb-3">
                <label for="password-input-signup" class="form-label">Password</label>
                <input type="password" class="form-control" id="password-input-signup" required>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up!</button>
        </form>

        <a href="/login">Login Instead</a>
    </div>
</div>

<script src="/js/signup.js"></script>